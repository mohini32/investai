# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/investai_db
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000

# AI API Configuration
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Market Data API Configuration
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
YAHOO_FINANCE_ENABLED=true

# External API Rate Limits
API_RATE_LIMIT_PER_MINUTE=60
MARKET_DATA_REFRESH_INTERVAL=300

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,csv,xlsx

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/investai.log

# Indian Market Configuration
NSE_ENABLED=true
BSE_ENABLED=true
MUTUAL_FUND_DATA_ENABLED=true

# Tax Configuration
CURRENT_FINANCIAL_YEAR=2024-25
TAX_BRACKETS_UPDATE_DATE=2024-04-01

# Environment
ENVIRONMENT=development
DEBUG=true

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_PORTFOLIO_ANALYSIS=true
ENABLE_TAX_PLANNING=true
ENABLE_INSURANCE_ADVISORY=true
ENABLE_GOAL_TRACKING=true

# Third-party Integrations
ENABLE_BANK_INTEGRATION=false
ENABLE_TRADING_PLATFORM_SYNC=false

# Monitoring and Analytics
ENABLE_ANALYTICS=false
ANALYTICS_API_KEY=your-analytics-key

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
