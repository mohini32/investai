# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Application Configuration
NEXT_PUBLIC_APP_NAME=InvestAI
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# External Services
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# Map and Location Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Social Media Links
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/investai
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/investai
NEXT_PUBLIC_GITHUB_URL=https://github.com/investai

# Support and Contact
NEXT_PUBLIC_SUPPORT_EMAIL=support@investai.com
NEXT_PUBLIC_CONTACT_PHONE=+91-XXXXXXXXXX

# Legal and Compliance
NEXT_PUBLIC_PRIVACY_POLICY_URL=/privacy-policy
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=/terms-of-service
NEXT_PUBLIC_DISCLAIMER_URL=/disclaimer

# Market Data Configuration
NEXT_PUBLIC_DEFAULT_CURRENCY=INR
NEXT_PUBLIC_DEFAULT_MARKET=NSE
NEXT_PUBLIC_MARKET_TIMEZONE=Asia/Kolkata

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_CHART_THEME=light

# Performance and Caching
NEXT_PUBLIC_CACHE_DURATION=300000
NEXT_PUBLIC_API_TIMEOUT=30000

# Development Configuration
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_SHOW_DEV_TOOLS=false

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_PWA_NAME=InvestAI
NEXT_PUBLIC_PWA_SHORT_NAME=InvestAI
NEXT_PUBLIC_PWA_DESCRIPTION=AI-Powered Financial Advisor

# Notification Configuration
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
